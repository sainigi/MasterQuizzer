<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizzer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logomq"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logomq"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quizzer">
        <activity android:name=".registration.RegisterActivity"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BookmarkActivity" />
        <activity android:name=".ScoreActivity" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".SetsActivity" />
        <activity android:name=".CategoriesActivity" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>